{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@shogun/sdk": ["packages/shogun-sdk/src"],
      "@shogun/sdk/*": ["packages/shogun-sdk/src/*"]
    }
  },
  "include": ["src/**/*", "packages/shogun-sdk/src/**/*"],
  "exclude": ["node_modules", "dist"]
}